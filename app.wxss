/**app.wxss**/

page {
    background-color: #33CC99;
    height: 100%;
    font-size: 32rpx;
    font-family: 'Microsoft yahei';
    line-height: 1.6;
}

page>scroll-view {
    background-color: #e9e9e9;
}

.leaf {
    padding: 20rpx;
    margin: 24rpx 0;
    background-color: #fff;
    animation: show .6s;
}

@keyframes show {
    from {
        opacity: .5;
        margin-top: -30rpx;
    }
    to {
        opacity: 1;
        margin: 24rpx 0;
    }
}

.leaf-header {
    display: flex;
    flex-direction: row;
    margin-bottom: 10rpx;
}

.leaf-header>image {
    display: inline-block;
    margin-top: -50rpx;
    width: 110rpx;
    height: 110rpx;
    border: 6rpx solid #fff;
    border-radius: 100%;
}

.leaf-header>.user-name {
    padding: 0 30rpx;
    line-height: 36rpx;
    font-size: 36rpx;
}

.leaf-header>.no-name {
    line-height: 36rpx;
    font-size: 36rpx;
    color: #ccc;
}

.leaf-content {
    padding: 16rpx 10rpx;
    font-size: 34rpx;
    text-indent: 40rpx;
}

.leaf-footer {
    display: flex;
    flex-direction: row;
}

.leaf-footer>.hugs {
    width: 50%;
}

.hugs>.hugs-btn{
  border: none;
  background-color: #fff;
  font-size: 28rpx;
}

.hugs>.hugs-btn:after{
  content: '';
  border: none;
}

.hugs>.hugs-btn-active{
  color: #00cc00;
}

.leaf-footer>.time {
    width: 50%;
    text-align: right;
    font-size: 28rpx;
    text-align: right;
    color: #ccc;
}

.over{
    text-align: center;
    font-size: 30rpx;
    color: #fff;
}